  <body>
<div class="container">

    <%- include ('../partials/nav.ejs') %>
  
  <h1>Add a New Movie!</h1>
  <div class="">
    <form class="" action="/movies" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" required><br>
      <label for="description">Description:</label>
      <input type="text" name="description"><br>
      <label for="genres">Genres:</label>
      <input type="text" name="genres" required><br>
      <label for="rated">Rated:</label>
      <input type="text" name="rated" required><br>
      <label for="runTime">Run Time in minutes:</label>
      <input type="text" name="runTime" required><br>
      <label for="moviePoster">Movie Poster URL:</label>
      <input type="text" name="moviePoster" ><br>
      <label for="available">Is it available?</label>
      <input type="checkbox" id='available' name="available"
      ><br>
      <input type="submit" value="Add New Movie">
    </form>

  </div>
</div>
